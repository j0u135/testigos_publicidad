<h2>Nueva Linea</h2>

<%= render 'shared/errors', obj:@line %>

<%= form_for [@order, @creative, @line] do |f| %>

    <label>Número de Línea: </label>
    <%= f.text_field :line_number %>
    
    <label>Formato: </label>
    <%= f.text_field :format_id %>
    
    <label>Fecha de Inicio: </label>
    <%= f.text_field :start_date %>
    
    <label>Fecha de Fin: </label>
    <%= f.text_field :end_date %>

    <%= f.submit 'Crear' %>
    
<% end %>

<h4>Listado de Líneas</h4>

<ul>
    <% @lines.each do |line| %>
    <li><%= line.line_number %></li>
    <% end %>
</ul>